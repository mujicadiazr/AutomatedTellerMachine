@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>

<address>
    One Microsoft Way<br />
    Redmond, WA 98052-6399<br />
    <abbr title="Phone">P:</abbr>
    425.555.0100
</address>

<address>
    <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
    <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
</address>

<div id="form-section">
    <h3>@ViewBag.TheMessage</h3>
    <form method="post" id="contact-form">
        <textarea name="message" id="message"></textarea>
        <input type="submit" value="Send"/>
    </form>
    <img src="~/Content/images/progress.gif" id="progress" style="display: none" />
</div>

@* Partial page updates using pure jQuery  *@
@section scripts
{
    <script>
        $('#contact-form').submit(function() {
            $('#progress').show();
            $.post('', { message: $('#message').val() })
                .done(function (response) {
                setTimeout(function () { $('#form-section').html(response); }, 2000);
                });
            return false;
        });
    </script>
}

